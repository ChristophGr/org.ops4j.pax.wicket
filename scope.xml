<project name="scope">

    <property name="master.location" value="../../ant-tools/target/dist"/>
    <import file="${master.location}/master.xml"/>

    <target name="project-defs">

        <!--modules-->
        <path id="pax-wicket-api">
            <pathelement
                location="${scope.basedir}/api/target/deliverables/jars/pax-wicket-api-${project.version}.jar"/>
        </path>

        <path id="pax-wicket-service">
            <pathelement
                location="${scope.basedir}/service/target/deliverables/jars/pax-wicket-service-${project.version}.jar"/>
        </path>

        <path id="pax-wicket-sample-main">
            <pathelement
                location="${scope.basedir}/sample/main/target/deliverables/jars/pax-wicket-sample-main-${project.version}.jar"/>
        </path>
        <path id="pax-wicket-sample-menu">
            <pathelement
                location="${scope.basedir}/sample/menu/target/deliverables/jars/pax-wicket-sample-menu-${project.version}.jar"/>
        </path>
        <path id="pax-wicket-sample-page1">
            <pathelement
                location="${scope.basedir}/sample/page1/target/deliverables/jars/pax-wicket-sample-page1-${project.version}.jar"/>
        </path>
        <path id="pax-wicket-sample-page2">
            <pathelement
                location="${scope.basedir}/sample/page2/target/deliverables/jars/pax-wicket-sample-page2-${project.version}.jar"/>
        </path>
    </target>

</project>
