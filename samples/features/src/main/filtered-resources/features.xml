    <bundle>mvn:org.ops4j.pax.wicket.samples.view/pax-wicket-samples-view-floor/${project.version}</bundle>
    <bundle>mvn:org.ops4j.pax.wicket.samples.view/pax-wicket-samples-view-franchisee/${project.version}</bundle>
  </feature>
  <feature name="wicket-samples-basic" version="${project.version}">
    <feature version="${project.version}">wicket</feature>
    <bundle>mvn:org.ops4j.pax.wicket.samples.service/pax-wicket-samples-service-basic/${project.version}</bundle>
  </feature>
  <feature name="wicket-samples-alternative" version="${project.version}">
    <feature version="${project.version}">wicket</feature>
    <bundle>mvn:org.ops4j.pax.wicket.samples.service/pax-wicket-samples-service-alternative/${project.version}</bundle>
